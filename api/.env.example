# Application Settings
APP_NAME=Workforce Wellbeing Analytics
DEBUG=False
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wellbeing_db

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Microsoft Graph OAuth2
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

# Slack OAuth2
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:8000/auth/slack/callback

# Jira OAuth2
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret
JIRA_REDIRECT_URI=http://localhost:8000/auth/jira/callback
JIRA_CLOUD_ID=your-jira-cloud-id

# Asana OAuth2
ASANA_CLIENT_ID=your-asana-client-id
ASANA_CLIENT_SECRET=your-asana-client-secret
ASANA_REDIRECT_URI=http://localhost:8000/auth/asana/callback

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# M2SYS CloudABIS Biometric Authentication
CLOUDABIS_APP_KEY=your-cloudabis-app-key
CLOUDABIS_SECRET_KEY=your-cloudabis-secret-key
CLOUDABIS_CUSTOMER_KEY=your-customer-key
CLOUDABIS_BASE_URL=https://cloud.m2sys.com/CloudABIS/api
CLOUDABIS_ENGINE_NAME=FACE  # Options: FACE, FINGERPRINT, IRIS, MULTIMODAL

# Google Sheets OAuth2 (for attendance tracking)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_ATTENDANCE_SPREADSHEET_ID=  # Created automatically or manually - see GOOGLE_SHEETS_INTEGRATION.md

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Extraction
ANALYSIS_DAYS_BACK=14
WORKING_HOURS_START=9
WORKING_HOURS_END=18

# Privacy
ANONYMIZE_DATA=true
HASH_ALGORITHM=sha256
